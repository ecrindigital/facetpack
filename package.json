{
  "name": "facetpack-monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "test:all": "bun run --filter './packages/*' test",
    "build:all": "bun run --filter './packages/*' build",
    "cli": "bun run cli:build && ./packages/facet-cli/bin/facet",
    "cli:build": "bun run --filter '@ecrindigital/facet-cli' build"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "overrides": {
    "react-native": "0.81.5",
    "react": "19.1.0"
  }
}
